<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="1dp"
    android:padding="4dp"
    android:background="@drawable/query_background">

    <TextView
        android:id="@+id/userNameReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="5dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:paddingHorizontal="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="3dp"/>


    <ImageView
        android:id="@+id/removeReply"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_remove_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="3dp"
        android:layout_marginHorizontal="5dp"/>

    <TextView
        android:id="@+id/replyBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@drawable/query_inner_background"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="6dp"
        android:paddingHorizontal="10dp"
        android:maxLength="250"
        android:inputType="textMultiLine"
        android:layout_below="@id/userNameReply"/>


</RelativeLayout>