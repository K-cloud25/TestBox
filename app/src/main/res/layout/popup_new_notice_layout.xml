<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dark_popup_layout"
    android:padding="30dp"
    android:layout_marginVertical="15dp"
    android:layout_marginHorizontal="15dp">

    <ImageView
        android:id="@+id/previewImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/nopreviewdefault"
        android:layout_marginVertical="4dp"/>

    <Button
        android:id="@+id/popUpaddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Poster"
        android:background="@drawable/dark_button_bg"
        android:layout_gravity="center"
        android:layout_marginVertical="4dp"
        android:padding="14dp"
        android:textColor="@color/textDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/textDark"
        android:layout_marginHorizontal="30dp"/>
    <EditText
        android:id="@+id/noticeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_edit_text_bg"
        android:hint="Enter Poster Title"
        android:padding="7dp"
        android:textColor="@color/textDark"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="4dp"
        android:layout_marginBottom="4dp"
        android:inputType="textMultiLine"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LINKS"
        android:textColor="@color/textDark"
        android:layout_marginHorizontal="30dp"/>
    <EditText
        android:id="@+id/noticeLinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_edit_text_bg"
        android:hint="Enter Poster Related Links"
        android:padding="7dp"
        android:textColor="@color/textDark"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="4dp"
        android:layout_marginBottom="4dp"
        android:inputType="textMultiLine"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESCRIPTION"
        android:textColor="@color/textDark"
        android:layout_marginHorizontal="30dp"/>
    <EditText
        android:id="@+id/noticeDescrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_edit_text_bg"
        android:hint="Enter Poster Related Description"
        android:padding="7dp"
        android:textColor="@color/textDark"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="4dp"
        android:layout_marginBottom="4dp"
        android:inputType="textMultiLine"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra Information"
        android:textColor="@color/textDark"
        android:layout_marginHorizontal="30dp"/>
    <EditText
        android:id="@+id/noticeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_edit_text_bg"
        android:hint="Enter Poster Related Links"
        android:padding="7dp"
        android:textColor="@color/textDark"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="4dp"
        android:layout_marginBottom="4dp"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/noticeUploadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Notice"
        android:background="@drawable/dark_button_bg"
        android:layout_gravity="center"
        android:layout_marginVertical="4dp"
        android:padding="14dp"
        android:textColor="@color/textDark"/>

</LinearLayout>