<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="60dp"
    android:layout_marginHorizontal="30dp"
    android:background="@color/backGround">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="4dp"
            android:text="Project Name : "
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/projectNameRQU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="4dp"
            android:autoSizeTextType="uniform"
            android:hint="Enter Project Name Here"
            android:scrollbars="vertical"
            android:textColorHint="@color/darkGrey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="4dp"
            android:text="UserName : "
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/userNameInputRQU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="4dp"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textColorHint="@color/darkGrey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="4dp"
            android:text="Work : "
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/workInputRQU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="4dp"
            android:hint="Enter Work Here"
            android:scrollbars="vertical"
            android:textColorHint="@color/darkGrey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="4dp"
            android:text="Requirement : "
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/requirementInputRQU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="4dp"
            android:scrollbars="vertical"
            android:hint="Enter Requirement Here"
            android:textColorHint="@color/darkGrey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/canBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginHorizontal="5dp"
            android:background="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginHorizontal="15dp"
            android:background="@color/buttonTextColor"
            />
    </LinearLayout>
</LinearLayout>